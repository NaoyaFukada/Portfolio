  }

  .typing-animation {
    overflow: hidden;
    white-space: nowrap;
    width: 0;
    animation: typing 2.5s steps(18) 1s both;
  }

  .typing-cursor {
    @apply text-emerald-400 font-bold;
    margin-left: -1px;
    animation: cursor-typing-sequence 4s linear 1s forwards;
  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes cursor-typing-sequence {
    /* Phase 1: Move and blink during typing (0% - 62.5%) */
    0% { 
      transform: translateX(0); 
      opacity: 1; 
    }
    3%, 6%, 9%, 12%, 15%, 18%, 21%, 24%, 27%, 30%, 33%, 36%, 39%, 42%, 45%, 48%, 51%, 54%, 57%, 60% {
      opacity: 0;
    }
    62.5% { 
      transform: translateX(142px); 
      opacity: 1; 
    }
    
    /* Phase 2: Brief pause at end (62.5% - 75%) */
    75% {
      transform: translateX(142px);
      opacity: 1;
    }
    
    /* Phase 3: Disappear completely (75% - 100%) */
    76% { 
      transform: translateX(142px); 
      opacity: 0; 
    }
    100% { 
      transform: translateX(142px); 
      opacity: 0; 
    }
  }

  /* JSON Output */
  .json-output {
    @apply space-y-1 ml-4;
    animation: fadeInUp 0.8s ease-out 4s both;
  }

  .json-line {
    @apply transition-opacity duration-300;
    animation: fadeInLine 0.5s ease-out forwards;
    opacity: 0;
  }

  .json-line:nth-child(1) { animation-delay: 4.2s; }
  .json-line:nth-child(2) { animation-delay: 4.4s; }
  .json-line:nth-child(3) { animation-delay: 4.6s; }
  .json-line:nth-child(4) { animation-delay: 4.8s; }
