  .json-line:nth-child(6) { animation-delay: 5.2s; }
  .json-line:nth-child(7) { animation-delay: 5.4s; }
  .json-line:nth-child(8) { animation-delay: 5.6s; }
  .json-line:nth-child(9) { animation-delay: 5.8s; }
  .json-line:nth-child(10) { animation-delay: 6.0s; }
  .json-line:nth-child(11) { animation-delay: 6.2s; }
  .json-line:nth-child(12) { animation-delay: 6.4s; }
  .json-line:nth-child(13) { animation-delay: 6.6s; }
  .json-line:nth-child(14) { animation-delay: 6.8s; }
  .json-line:nth-child(15) { animation-delay: 7.0s; }
  .json-line:nth-child(16) { animation-delay: 7.2s; }

  @keyframes fadeInLine {
    from { 
      opacity: 0; 
      transform: translateX(-10px); 
    }
    to { 
      opacity: 1; 
      transform: translateX(0); 
    }
  }

  /* Indentation */
  .indent-1 { @apply ml-4; }
  .indent-2 { @apply ml-8; }

  /* JSON Syntax Highlighting */
  .json-key { @apply text-cyan-300; }
  .json-string { @apply text-orange-300; }
  .json-number { @apply text-rose-400; }
  .json-boolean { @apply text-emerald-400; }
  .json-bracket { @apply text-yellow-400; }
  .json-colon { @apply text-slate-400; }
  .json-comma { @apply text-slate-500; }

  /* New Prompt */
  .new-prompt {
    @apply flex items-center gap-2 mt-6;
    animation: fadeInUp 0.5s ease-out 7.5s both;
  }

  .cursor-blink {
    @apply text-emerald-400;
    /* Remove blinking animation to match real macOS Terminal */
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @keyframes fadeInUp {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Hover Effects */
  .terminal-window:hover {
    box-shadow: 
      0 0 40px rgba(14, 165, 233, 0.15),
      0 0 80px rgba(14, 165, 233, 0.08),
      inset 0 1px 0 rgba(148, 163, 184, 0.15);
