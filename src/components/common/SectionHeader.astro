---
interface SectionHeaderProps {
  mainText: string;        // e.g. "About"
  highlightText: string;   // e.g. "Me"
  highlightClass: string;
  underlineClass: string;
  subtitle?: string;
}

const { mainText, highlightText, highlightClass, underlineClass, subtitle } = Astro.props as SectionHeaderProps;
---


<div class="header">
    <h2 class="title">
        {mainText} <span class={highlightClass}>{highlightText}</span>
    </h2>
    <div class={`underline ${underlineClass}`}></div>
    <p class="subtitle">{subtitle}</p>
</div>

<style>
    @reference "tailwindcss";

    .header {
        @apply text-center mb-12;
    }

    .title {
        @apply text-5xl md:text-6xl font-bold text-white mb-4;
    }

    .underline {
        @apply w-24 h-1 mx-auto rounded-full;
    }

    .subtitle {
        @apply text-lg text-slate-300 max-w-2xl mx-auto mt-4;
    }
</style>